div([fxLayout]='"row"', [fxLayoutAlign]='"space-around center"')
  table.container(mat-table, [dataSource]='sourceData', class='mat-elevation-z8')
    ng-container(matColumnDef='typeMovement')
      th.column-1(mat-header-cell, *matHeaderCellDef)  Type Movement
      td(mat-cell, *matCellDef="let element")  {{element.typeMovement}}
    ng-container(matColumnDef='valueMovement')
      th.column-2(mat-header-cell, *matHeaderCellDef)  Value Movement
      td(mat-cell, *matCellDef="let element")  {{element.valueMovement}}
    ng-container(matColumnDef='dateMovement')
      th.column-3(mat-header-cell, *matHeaderCellDef)  Date Movement
      td(mat-cell, *matCellDef="let element")  {{element.dateMovement}}
    ng-container(matColumnDef='tpAccount')
      th.column-4(mat-header-cell, *matHeaderCellDef) Third Party
        br
        | Account
      td(mat-cell, *matCellDef="let element")  {{element.tpAccount}}
    ng-container(matColumnDef='tpIdentification')
      th.column-5(mat-header-cell, *matHeaderCellDef) Third Party
        br
        | Identification
      td(mat-cell, *matCellDef="let element")  {{element.tpIdentification}}
    ng-container(matColumnDef='tpName')
      th.column-6(mat-header-cell, *matHeaderCellDef)  Third Party Name
      td(mat-cell, *matCellDef="let element")  {{element.tpName}}
    ng-container(matColumnDef='approval')
      th.column-7(mat-header-cell, *matHeaderCellDef)  Approval
      td(mat-cell, *matCellDef="let element")
        mat-icon(*ngIf='element.approval') done
        mat-icon(*ngIf='!element.approval') clear

    tr(mat-header-row, *matHeaderRowDef='displayedColumns')
    tr(mat-row, *matRowDef='let row; columns: displayedColumns;')


  mat-card
    mat-card-header.profile([fxLayout]='"column"', [fxLayoutAlign]='"space-around center"') Your Balance is:
    mat-card-content.form
      form.form([formGroup]='balanceGroup')
        mat-form-field
          input(matInput, color='primary', placeholder='Balance', formControlName='balance', [disabled]='true')
