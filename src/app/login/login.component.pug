
div([fxLayout]='"column"', [fxLayoutAlign]='"space-around center"')
  h1.title Welcome to Salamandra Bank!
   img.image(src='assets/slmndrgreen.png', width= '70px')

  div.form-container([fxLayout]='"column"', [fxLayoutAlign]='"space-around center"')
    mat-card
      div.form-title Login
      mat-card-content
        form.form([formGroup]='loginGroup', (ngSubmit)='login()')
          mat-form-field
            input(matInput, color='primary', placeholder='Username', formControlName='username', autocomplete='off')
          mat-form-field
            input(matInput, placeholder='Password', formControlName='password', type='password')

          mat-error(*ngIf='loginError') Login error

          div([fxLayout]='"row"', [fxLayoutAlign]='"space-between center"')
            a(mat-button, color='primary', routerLink='register') Register
            button.btn-primary(mat-raised-button, color='primary', (click)="login()") Log in
